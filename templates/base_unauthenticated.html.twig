<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="theme-color" content="#ffffff">

    {% block stylesheets %}
        {{ encore_entry_link_tags('unauthenticated') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('unauthenticated') }}
    {% endblock %}

    <title>{% block title %}Archerie{% endblock %}</title>
</head>
<body>
{% block page_layout %}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-12 text-center mb-4">
            <a href="{{ path('app_login') }}">
                <img src="{{ asset('build/logo.svg') }}"
                     alt="Les Archers de Bordeaux Guyenne"
                     style="max-width: 200px;"
                     class="mx-auto d-block"/>
            </a>
        </div>
        <div class="col-lg-8 col-md-10 col-12">
            {% block body %}{% endblock %}
        </div>
    </div>
</div>
{% endblock %}
{% include '_footer.html.twig' %}
{% include '_matomo.html.twig' %}
</body>
</html>