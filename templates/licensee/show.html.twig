{% extends 'base.html.twig' %}

{% block title %}{{ licensee.fullname }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-3 col-xs-12 mb-md-3">
            <div class="border border-1 rounded-3">
                <div class="bg-primary text-light text-center pt-3 rounded-0 rounded-top d-flex flex-column">
                    <div class="mb-3 d-flex justify-content-center">
                        <div class="bg-white rounded-3" style="width: 60px; height:15px"></div>
                    </div>
                    <div>
                        <h2 class="mb-3">{{ licensee.fullname }}</h2>
                    </div>
                    <div class="mb-3">
                        <img src="{{ path('app_licensee_picture', {'fftaCode': licensee.fftaMemberCode}) }}" alt="Photo de profil" class="img-thumbnail" style="width: 150px; min-height: 275px" />
                    </div>
                </div>

                <div class="p-3">
                    <h4>Licence 2023</h4>
                    {% set license = licensee.licenseForSeason(2023) %}
                    {% if not licensee.licenseForSeason(2023) %}
                        <em>Aucune license</em>
                    {% else %}
                        <ul class="list-unstyled mb-0">
                            <li>{{ license.ageCategory|readable_enum }}</li>
                            <li>{{ license.type|readable_enum('LicenseType') }}</li>
                        </ul>
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="col-md-4 col-xs-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Équipement</h5>
                    <p class="card-text">Fonctionnalité en cours de développement.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 col-xs-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Résultats</h5>
                    <p class="card-text">Fonctionnalité en cours de développement.</p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
