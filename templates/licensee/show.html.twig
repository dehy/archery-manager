{% extends 'base.html.twig' %}

{% block return_link %}
    {% if licenseeHelper.licenseeFromSession.id is same as licensee.id %}
        {{ path('app_mobile_othermenu') }}
    {% else %}
        {{ path('app_licensee_index') }}
    {% endif %}
{% endblock %}

{% block return_text %}
    {% if licenseeHelper.licenseeFromSession.id is same as licensee.id %}
        Autre
    {% else %}
        Trombinoscope
    {% endif %}
{% endblock %}

{% block title %}{{ licensee.fullname }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-3 col-12 mb-3">
            <div class="border border-1 rounded-3">
                <div class="bg-ffta text-light text-center pt-3 rounded-0 rounded-top d-flex flex-column">
                    <div class="mb-1 d-flex justify-content-center">
                        <div class="bg-white rounded-3" style="width: 60px; height:15px"></div>
                    </div>
                    <img src="{{ asset('build/logo-ffta.svg') }}" alt="" class="mb-2" style="height: 40px">
                    <h2>{{ licensee.fullname }}</h2>
                    <div class="mb-3">
                        <span class="badge bg-light text-bg-light fs-5">{{ licensee.fftaMemberCode }}</span>
                    </div>
                    <div class="mb-3 d-block position-relative">
                        <img src="{{ licensee.profilePicture ? licensee.profilePicture|temporary_url : asset('build/profilePictureVertical.svg') }}"
                             alt="Photo de profil" class="img-thumbnail badge-profile-picture" />
                    </div>
                </div>

                <div class="px-3 pt-3">
                    <h4>
                        Licence 2023
                        <a href="https://ffta-goal.multimediabs.com/espaceLicencie" class="btn btn-sm btn-secondary" target="_blank">
                            <em class="fa-solid fa-share"></em>
                            FFTA
                        </a>
                    </h4>
                    {% set license = licensee.licenseForSeason(2023) %}
                    {% if not licensee.licenseForSeason(2023) %}
                        <em>Aucune license</em>
                    {% else %}
                        <ul class="list-unstyled mb-0">
                            <li>
                                <em class="fa-solid fa-people-group fa-fw"></em>
                                {{ license.ageCategory|readable_enum }}
                            </li>
                            <li>
                                <em class="fa-solid fa-venus-mars fa-fw"></em>
                                {{ licensee.gender|readable_enum('GenderType') }}
                            </li>
                            <li>
                                <em class="fa-solid fa-screwdriver-wrench fa-fw"></em>
                                {{ license.activities|map(a => a|readable_enum('LicenseActivityType'))|join(', ') }}
                            </li>
                        </ul>
                    {% endif %}
                </div>
                <div class="p-3">
                    {% for group in licensee.groups %}
                        <span class="badge bg-secondary">{{ group.name }}</span>
                    {% else %}
                        <em>Dans aucun groupe</em>
                    {% endfor %}
                </div>
            </div>
        </div>
        <div class="col-md-9">
            {% if is_granted('ROLE_ADMIN') %}
                <div class="row">
                    <div class="col-12">
                        <div class="alert alert-warning">
                            <h4 class="alert-heading">Administration</h4>
                            {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{
                            adminUrlGenerator
                                .setController('App\\Controller\\Admin\\LicenseeCrudController')
                                .setAction('edit')
                                .setEntityId(licensee.id)
                            .generateUrl
                            }}" class="btn btn-secondary">
                                <em class="fa-solid fa-pencil"></em>
                                Éditer
                            </a>
                            <a href="{{
                            adminUrlGenerator
                                .setController('App\\Controller\\Admin\\ResultCrudController')
                                .setAction('index')
                                .set('filters[licensee][comparison]', '=')
                                .set('filters[licensee][value]', licensee.id)
                            .generateUrl
                            }}" class="btn btn-secondary">
                                <em class="fa-solid fa-square-poll-vertical"></em>
                                Résultats
                            </a>
                            <a href="{{ path('app_homepage', {'_switch_user': licensee.user.email, '_switch_licensee': licensee.fftaMemberCode}) }}"
                               class="btn btn-warning">
                                <em class="fa-solid fa-user-secret"></em> Usurper l'identité
                            </a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endif %}
            <div class="row">
                <div class="col-md-6 col-12 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Équipement</h5>
                            <p class="card-text">Fonctionnalité en cours de développement.</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-12 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Résultats</h5>
                            <p class="card-text">Fonctionnalité en cours de développement.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
