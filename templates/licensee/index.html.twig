{% extends "base.html.twig" %}

{% block title %}Trombinoscope{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">
            Trombinoscope {{ year }}
            {% if selectedGroup %}
                - {{ selectedGroup.name }}
            {% endif %}
        </h2>
        {% if is_granted('ROLE_ADMIN') %}
            <button class="btn btn-warning disabled">
                <em class="fa-solid fa-arrows-rotate"></em> Sync
            </button>
        {% endif %}
    </div>

    <!-- Filtres par groupe -->
    {% if allGroups is not empty %}
        <div class="mb-4">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <h5>Filtrer par groupe :</h5>
                    <div class="btn-group flex-wrap" role="group">
                        <a href="{{ path('app_licensee_index') }}" 
                           class="btn {{ selectedGroup is null ? 'btn-primary' : 'btn-outline-primary' }}">
                            <em class="fa-solid fa-users"></em>
                            Tous ({{ totalLicensees }})
                        </a>
                        {% for group in allGroups %}
                            <a href="{{ path('app_licensee_index', {'group': group.id}) }}" 
                               class="btn {{ selectedGroup and selectedGroup.id == group.id ? 'btn-primary' : 'btn-outline-primary' }}">
                                <em class="fa-solid fa-user-group"></em>
                                {{ group.name }} ({{ group.licensees|length }})
                            </a>
                        {% endfor %}
                    </div>
                </div>
                <div>
                    <a href="{{ path('app_club_show') }}" class="btn btn-outline-secondary">
                        <em class="fa-solid fa-building me-1"></em>
                        Retour au club
                    </a>
                </div>
            </div>
        </div>
    {% endif %}

    {% if licensees is empty %}
        <div class="alert alert-info">
            <em class="fa-solid fa-info-circle"></em>
            {% if selectedGroup %}
                Aucun licencié dans le groupe "{{ selectedGroup.name }}".
            {% else %}
                Aucun licencié trouvé.
            {% endif %}
        </div>
    {% endif %}

    <div class="row">
        {% for licensee in licensees %}
            <div class="col-xxl-3 col-lg-4 col-md-6 col-12 mb-3">
                {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_COACH') %}
                    <a class="text-reset text-decoration-none"
                       href="{{ path('app_licensee_profile', {'fftaCode': licensee.fftaMemberCode}) }}"
                    >
                        {{ _self.card(licensee, year) }}
                    </a>
                {% else %}
                    {{ _self.card(licensee, year) }}
                {% endif %}
            </div>
        {% endfor %}
    </div>
{% endblock %}

{% macro card(licensee, year) %}
    {% set license = licensee.licenseForSeason(year) %}
    {% set profile_picture = 'default.jpg' %}
    {% if licensee.profilePicture %}
        {% set profile_picture = licensee.profilePicture.file.name %}
    {% endif %}
    <div class="card">
        <div class="row g-0">
            <div class="col-3">
                <img src="{{ licensee.profilePicture ? licensee.profilePicture|temporary_url : asset('build/profilePictureVertical.svg') }}"
                     class="img-fluid rounded-start" alt="">
            </div>
            <div class="col-9">
                <div class="card-body">
                    <h5 class="card-title mb-1">
                        {{ licensee_display_name(licensee) }}
                    </h5>
                    <p class="card-text">
                        <em class="fa-solid fa-people-group fa-fw"></em>
                        {% for group in licensee.groups %}
                            {{ group.name }}{{ not loop.last ? ', ' }}
                        {% else  %}
                            <em>Dans aucun groupe</em>
                        {% endfor %}<br>
                        <em class="fa-solid fa-bow-arrow fa-fw"></em>
                        {{ license.activities|map(a => a|readable_enum('LicenseActivityType'))|join(', ') }}
                    </p>
                </div>
            </div>
        </div>
    </div>
{% endmacro %}