{% extends 'base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block body %}
    <!-- Welcome Hero Section -->
    <div class="hero-section mb-5">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="display-5 mb-2">
                    Bonjour {{ licenseeHelper.licenseeFromSession.firstname }} üëã
                </h1>
                <p class="text-muted lead mb-0">
                    Bienvenue sur votre tableau de bord
                </p>
            </div>
            <div class="col-lg-4 text-lg-end">
                <div class="d-flex gap-2 justify-content-lg-end flex-wrap">
                    <a href="{{ path('app_event_index') }}" class="btn btn-primary">
                        <i class="fa-solid fa-calendar me-1"></i>
                        Calendrier
                    </a>
                    <a href="{{ path('app_club_show') }}" class="btn btn-outline-primary">
                        <i class="fa-solid fa-building me-1"></i>
                        Mon Club
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Upcoming Events Card -->
        <div class="col-lg-6">
            <div class="card h-100 shadow-sm border-0" data-controller="modal">
                {{ include('_modal.html.twig') }}
                <div class="card-header bg-transparent border-0 pb-0">
                    <h5 class="card-title mb-0">
                        <i class="fa-solid fa-calendar-days text-primary me-2"></i>
                        Prochains √©v√©nements
                    </h5>
                </div>
                <div class="card-body">
                    {% if events is empty %}
                        <div class="text-center py-4">
                            <i class="fa-solid fa-calendar-xmark fa-3x text-muted mb-3"></i>
                            <p class="text-muted mb-0">Aucun √©v√©nement pr√©vu</p>
                        </div>
                    {% else %}
                        <div class="events-list">
                            {% for event in events %}
                                {% set participation = eventHelper.licenseeParticipationToEvent(licenseeHelper.licenseeFromSession, event) %}
                                {% if participation.participationState is same as null %}
                                    {% set status_class = 'border-secondary' %}
                                    {% set icon = 'calendar' %}
                                    {% set icon_class = 'text-secondary' %}
                                {% elseif participation.participationState == constant('App\\DBAL\\Types\\EventParticipationStateType::NOT_GOING') %}
                                    {% set status_class = 'border-danger' %}
                                    {% set icon = 'calendar-xmark' %}
                                    {% set icon_class = 'text-danger' %}
                                {% elseif participation.participationState == constant('App\\DBAL\\Types\\EventParticipationStateType::INTERESTED') %}
                                    {% set status_class = 'border-warning' %}
                                    {% set icon = 'hourglass' %}
                                    {% set icon_class = 'text-warning' %}
                                {% elseif participation.participationState == constant('App\\DBAL\\Types\\EventParticipationStateType::REGISTERED') %}
                                    {% set status_class = 'border-success' %}
                                    {% set icon = 'calendar-check' %}
                                    {% set icon_class = 'text-success' %}
                                {% endif %}
                                
                                <a href="{{ path('app_event_show', {slug: event.slug}) }}" 
                                   class="text-decoration-none">
                                    <div class="event-item p-3 rounded border {{ status_class }} mb-3 position-relative overflow-hidden">
                                        <div class="row align-items-center">
                                            <div class="col-2 text-center">
                                                <i class="fa-solid fa-{{ icon }} fa-lg {{ icon_class }}"></i>
                                            </div>
                                            <div class="col-10">
                                                <div class="d-flex justify-content-between align-items-start">
                                                    <div class="flex-grow-1">
                                                        <h6 class="mb-1 text-dark fw-semibold">{{ event.title }}</h6>
                                                        <small class="text-muted">
                                                            {{ event|event_date(diff=true) }}
                                                        </small>
                                                    </div>
                                                    <div class="ms-2">
                                                        <span class="badge bg-light text-dark border">
                                                            <i class="fa-solid fa-people-group me-1"></i>
                                                            {{ event.participations|filter(p => p.participationState != 'not_going')|length }}
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            {% endfor %}
                        </div>
                        <div class="text-center mt-3">
                            <a href="{{ path('app_event_index') }}" class="btn btn-outline-primary btn-sm">
                                <i class="fa-solid fa-calendar me-1"></i>
                                Voir tous les √©v√©nements
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- Recent Results Card -->
        <div class="col-lg-6">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-header bg-transparent border-0 pb-0">
                    <h5 class="card-title mb-0">
                        <i class="fa-solid fa-bullseye text-success me-2"></i>
                        Mes derniers r√©sultats
                    </h5>
                </div>
                <div class="card-body">
                    {% if results is empty %}
                        <div class="text-center py-4">
                            <i class="fa-solid fa-bullseye fa-3x text-muted mb-3"></i>
                            <p class="text-muted mb-0">Aucun r√©sultat enregistr√©</p>
                        </div>
                    {% else %}
                        <div class="results-list">
                            {% for result in results %}
                                <div class="result-item p-3 rounded bg-light mb-3">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="flex-grow-1">
                                            <a href="{{ path('app_event_show', {slug: result.event.slug}) }}" 
                                               class="text-decoration-none">
                                                <h6 class="mb-1 text-dark fw-semibold">
                                                    {{ result.event.title }}
                                                    <i class="fa-solid fa-external-link-alt fa-xs text-muted ms-1"></i>
                                                </h6>
                                            </a>
                                            <div class="mb-2">
                                                <small class="text-muted">
                                                    {{ result.event|event_date(includeTime=false) }}
                                                </small>
                                            </div>
                                            <div class="d-flex gap-1 flex-wrap">
                                                <span class="badge bg-secondary bg-opacity-75">{{ result.distance }}m</span>
                                                <span class="badge bg-secondary bg-opacity-75">{{ result.targetType|readable_enum }}</span>
                                                <span class="badge bg-secondary bg-opacity-75">{{ result.targetSize }}cm</span>
                                            </div>
                                        </div>
                                        <div class="text-end">
                                            <div class="result-score">
                                                <span class="h5 mb-0 text-primary fw-bold">{{ result.total }}</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                        {% if results|length >= 5 %}
                            <div class="text-center mt-3">
                                <a href="{{ path('app_licensee_my_profile') }}" class="btn btn-outline-success btn-sm">
                                    <i class="fa-solid fa-chart-line me-1"></i>
                                    Voir tous mes r√©sultats
                                </a>
                            </div>
                        {% endif %}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions Section -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-transparent border-0 pb-0">
                    <h5 class="card-title mb-0">
                        <i class="fa-solid fa-bolt text-warning me-2"></i>
                        Actions rapides
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-3 col-sm-6">
                            <a href="{{ path('app_licensee_index') }}" class="btn btn-outline-primary w-100 p-3 d-flex align-items-center justify-content-center">
                                <i class="fa-solid fa-users fa-lg me-2"></i>
                                <span class="fw-semibold">Trombinoscope</span>
                            </a>
                        </div>
                        <div class="col-md-3 col-sm-6">
                            <a href="{{ path('app_event_index') }}" class="btn btn-outline-primary w-100 p-3 d-flex align-items-center justify-content-center">
                                <i class="fa-solid fa-calendar fa-lg me-2"></i>
                                <span class="fw-semibold">Calendrier</span>
                            </a>
                        </div>
                        <div class="col-md-3 col-sm-6">
                            <a href="{{ path('app_licensee_my_profile') }}" class="btn btn-outline-primary w-100 p-3 d-flex align-items-center justify-content-center">
                                <i class="fa-solid fa-user fa-lg me-2"></i>
                                <span class="fw-semibold">Mon Profil</span>
                            </a>
                        </div>
                        <div class="col-md-3 col-sm-6">
                            <a href="{{ path('app_club_show') }}" class="btn btn-outline-primary w-100 p-3 d-flex align-items-center justify-content-center">
                                <i class="fa-solid fa-building fa-lg me-2"></i>
                                <span class="fw-semibold">Mon Club</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
