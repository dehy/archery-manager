{% extends 'base.html.twig' %}

{% block title %}Modifier {{ equipment.name }} - Matériel du club{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>
                <em class="fa-solid fa-edit me-2"></em>
                Modifier {{ equipment.name }}
            </h1>
            <a href="{{ path('app_club_equipment_show', {id: equipment.id}) }}" class="btn btn-outline-secondary">
                <em class="fa-solid fa-arrow-left me-2"></em>
                Retour
            </a>
        </div>

        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <em class="fa-solid fa-info-circle me-2"></em>
                            Informations sur l'équipement
                        </h5>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    {{ form_row(form.type) }}
                                </div>
                                <div class="col-md-6 mb-3">
                                    {{ form_row(form.name) }}
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    {{ form_row(form.serialNumber) }}
                                </div>
                                <div class="col-md-6 mb-3">
                                    {{ form_row(form.quantity) }}
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    {{ form_row(form.purchasePrice) }}
                                </div>
                                <div class="col-md-6 mb-3">
                                    {{ form_row(form.purchaseDate) }}
                                </div>
                            </div>

                            {# Bow-specific fields - shown via JavaScript based on type #}
                            <div id="bow-fields" class="d-none">
                                <hr>
                                <h6 class="mb-3">
                                    <em class="fa-solid fa-bow-arrow me-2"></em>
                                    Détails de l'arc
                                </h6>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        {% if form.bowType is defined %}
                                            {{ form_row(form.bowType) }}
                                        {% endif %}
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        {% if form.brand is defined %}
                                            {{ form_row(form.brand) }}
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4 mb-3">
                                        {% if form.model is defined %}
                                            {{ form_row(form.model) }}
                                        {% endif %}
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        {% if form.limbSize is defined %}
                                            {{ form_row(form.limbSize) }}
                                        {% endif %}
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        {% if form.limbStrength is defined %}
                                            {{ form_row(form.limbStrength) }}
                                        {% endif %}
                                    </div>
                                </div>
                            </div>

                            {# Arrow-specific fields - shown via JavaScript based on type #}
                            <div id="arrow-fields" class="d-none">
                                <hr>
                                <h6 class="mb-3">
                                    <em class="fa-solid fa-arrows-alt me-2"></em>
                                    Détails des flèches
                                </h6>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        {% if form.arrowType is defined %}
                                            {{ form_row(form.arrowType) }}
                                        {% endif %}
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        {% if form.fletchingType is defined %}
                                            {{ form_row(form.fletchingType) }}
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        {% if form.arrowLength is defined %}
                                            {{ form_row(form.arrowLength) }}
                                        {% endif %}
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        {% if form.arrowSpine is defined %}
                                            {{ form_row(form.arrowSpine) }}
                                        {% endif %}
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                {{ form_row(form.notes) }}
                            </div>

                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary">
                                    <em class="fa-solid fa-save me-2"></em>
                                    Enregistrer
                                </button>
                                <a href="{{ path('app_club_equipment_show', {id: equipment.id}) }}" class="btn btn-secondary">
                                    Annuler
                                </a>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const typeField = document.querySelector('[name="club_equipment[type]"]');
            const bowFields = document.getElementById('bow-fields');
            const arrowFields = document.getElementById('arrow-fields');

            function updateFields() {
                const selectedType = typeField.value;
                
                if (bowFields) {
                    bowFields.classList.toggle('d-none', selectedType !== 'bow');
                }
                if (arrowFields) {
                    arrowFields.classList.toggle('d-none', selectedType !== 'arrows');
                }
            }

            if (typeField) {
                typeField.addEventListener('change', updateFields);
                updateFields(); // Initial state
            }
        });
    </script>
{% endblock %}
