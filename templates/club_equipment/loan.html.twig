{% extends 'base.html.twig' %}

{% block title %}Prêter {{ equipment.name }} - Matériel du club{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>
                <em class="fa-solid fa-hand-holding me-2"></em>
                Prêter du matériel
            </h1>
            <a href="{{ path('app_club_equipment_show', {id: equipment.id}) }}" class="btn btn-outline-secondary">
                <em class="fa-solid fa-arrow-left me-2"></em>
                Retour
            </a>
        </div>

        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="card mb-4">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0">
                            <em class="fa-solid fa-box me-2"></em>
                            Équipement à prêter
                        </h5>
                    </div>
                    <div class="card-body">
                        <h4>{{ equipment.name }}</h4>
                        <p class="mb-0">
                            <span class="badge bg-secondary">{{ equipment.type|club_equipment_type_readable }}</span>
                            {% if equipment.serialNumber %}
                                <span class="ms-2">N° {{ equipment.serialNumber }}</span>
                            {% endif %}
                        </p>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <em class="fa-solid fa-user me-2"></em>
                            Informations sur le prêt
                        </h5>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                            {{ form_row(form.borrower) }}
                            {{ form_row(form.startDate) }}
                            {{ form_row(form.notes) }}

                            <div class="alert alert-warning">
                                <em class="fa-solid fa-exclamation-triangle me-2"></em>
                                <strong>Important :</strong> L'équipement sera marqué comme indisponible jusqu'à son retour.
                            </div>

                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-warning">
                                    <em class="fa-solid fa-check me-2"></em>
                                    Confirmer le prêt
                                </button>
                                <a href="{{ path('app_club_equipment_show', {id: equipment.id}) }}" class="btn btn-secondary">
                                    Annuler
                                </a>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
