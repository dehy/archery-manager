{% extends 'base.html.twig' %}

{% block title %}Étape 1 : Informations du licencié{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('app_licensee_index') }}">Licenciés</a></li>
                    <li class="breadcrumb-item active">Création</li>
                </ol>
            </nav>

            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <em class="fa-solid fa-user me-2"></em>
                        Étape 1/4 : Informations du licencié
                    </h3>
                </div>
                <div class="card-body">
                    {% if from_ffta %}
                        <div class="alert alert-info">
                            <em class="fa-solid fa-info-circle me-2"></em>
                            Les informations ont été pré-remplies depuis la FFTA. Vous pouvez les modifier si nécessaire.
                        </div>
                    {% endif %}

                    {{ form_start(form) }}
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.firstname) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.lastname) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.gender) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.birthdate) }}
                            </div>
                        </div>

                        <div class="mb-3">
                            {{ form_row(form.fftaMemberCode) }}
                            <small class="form-text text-muted">
                                Le code licence FFTA à 8 caractères (optionnel)
                            </small>
                        </div>

                        <div class="progress mb-3" style="height: 30px;">
                            <div class="progress-bar bg-primary" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
                                Étape 1/4
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_licensee_new_cancel') }}" class="btn btn-secondary">
                                <em class="fa-solid fa-times me-2"></em>
                                Annuler
                            </a>
                            <button type="submit" class="btn btn-primary">
                                Suivant
                                <em class="fa-solid fa-arrow-right ms-2"></em>
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
