{% extends 'base.html.twig' %}

{% block return_link %}
    {{ path('app_event_show', {slug: event.slug}) }}
{% endblock %}

{% block return_text %}
    {{ event.title }}
{% endblock %}

{% block title %}
    Résultats — {{ event.title }}
{% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="d-flex align-items-center mb-4 gap-3">
            <div class="icon-box bg-success bg-opacity-10 text-success">
                <em class="fa-solid fa-trophy fa-lg"></em>
            </div>
            <div>
                <h1 class="h3 mb-0">Résultats</h1>
                <p class="text-muted mb-0">{{ event.title }}</p>
            </div>
        </div>

        {% if results is empty %}
            <div class="text-center text-muted py-5">
                <em class="fa-solid fa-trophy fa-3x mb-3"></em>
                <p class="mb-0">Aucun résultat disponible pour ce concours.</p>
            </div>
        {% else %}
            <div class="card shadow-sm">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped mb-0">
                            <thead>
                                <tr>
                                    <th scope="col" class="text-start">Archer</th>
                                    <th scope="col" class="text-center">Série 1</th>
                                    <th scope="col" class="text-center">Série 2</th>
                                    <th scope="col" class="text-center">Total</th>
                                    <th scope="col" class="text-center d-none d-sm-table-cell">Dept. 1</th>
                                    <th scope="col" class="text-center d-none d-sm-table-cell">Dept. 2</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% set current_group = null %}
                                {% for result in results %}
                                    {% set group_key = result.ageCategory ~ '__' ~ result.activity %}
                                    {% if current_group != group_key %}
                                        {% set current_group = group_key %}
                                        {% if result.activity == 'CO' %}
                                            {% set tb1_label = '10' %}
                                            {% set tb2_label = 'X' %}
                                        {% else %}
                                            {% set tb1_label = '9' %}
                                            {% set tb2_label = '10' %}
                                        {% endif %}
                                        <tr class="table-light">
                                            <th scope="rowgroup" class="text-start">
                                                {{ result.ageCategory|readable_enum }} — {{ result.activity|readable_enum }}
                                            </th>
                                            <th scope="col" class="text-center text-muted fw-normal small">Série 1</th>
                                            <th scope="col" class="text-center text-muted fw-normal small">Série 2</th>
                                            <th scope="col" class="text-center text-muted fw-normal small">Total</th>
                                            <th scope="col" class="text-center text-muted fw-normal small d-none d-sm-table-cell">{{ tb1_label }}</th>
                                            <th scope="col" class="text-center text-muted fw-normal small d-none d-sm-table-cell">{{ tb2_label }}</th>
                                        </tr>
                                    {% endif %}
                                    <tr>
                                        <td>
                                            <a href="{{ path('app_licensee_profile', {id: result.licensee.id}) }}">
                                                {{ result.licensee.fullname }}
                                            </a>
                                        </td>
                                        <td class="text-center">{{ result.score1 ?? '—' }}</td>
                                        <td class="text-center">{{ result.score2 ?? '—' }}</td>
                                        <td class="text-center fw-semibold">{{ result.total ?? '—' }}</td>
                                        <td class="text-center d-none d-sm-table-cell">{{ result.nb10 ?? '—' }}</td>
                                        <td class="text-center d-none d-sm-table-cell">{{ result.nb10p ?? '—' }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        {% endif %}

        {% if is_granted('ROLE_ADMIN') %}
            <div class="mt-3">
                <a href="{{ path('app_event_resultsedit', {slug: event.slug}) }}"
                   class="btn btn-outline-primary btn-sm"
                   data-action="modal#open"
                   data-title="Édition des résultats">
                    <em class="fa-solid fa-pencil me-1"></em>
                    Modifier les résultats
                </a>
            </div>
        {% endif %}
    </div>
{% endblock %}
