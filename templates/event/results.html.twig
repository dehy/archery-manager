{% extends 'base.html.twig' %}

{% block return_link %}
    {{ path('app_event_show', {slug: event.slug}) }}
{% endblock %}

{% block return_text %}
    {{ event.title }}
{% endblock %}

{% block title %}
    Résultats — {{ event.title }}
{% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="d-flex align-items-center mb-4 gap-3">
            <div class="icon-box bg-success bg-opacity-10 text-success">
                <i class="fa-solid fa-trophy fa-lg"></i>
            </div>
            <div>
                <h1 class="h3 mb-0">Résultats</h1>
                <p class="text-muted mb-0">{{ event.title }}</p>
            </div>
        </div>

        {% if results is empty %}
            <div class="text-center text-muted py-5">
                <i class="fa-solid fa-trophy fa-3x mb-3"></i>
                <p class="mb-0">Aucun résultat disponible pour ce concours.</p>
            </div>
        {% else %}
            <div class="card shadow-sm">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped mb-0">
                            {% set current_age_category = null %}
                            {% for result in results %}
                                {% if current_age_category != result.ageCategory %}
                                    {% set current_age_category = result.ageCategory %}
                                    <thead>
                                        <tr class="table-light">
                                            <th class="text-start">{{ result.ageCategory|readable_enum }}</th>
                                            <th class="text-center">Série 1</th>
                                            <th class="text-center">Série 2</th>
                                            <th class="text-center">Total</th>
                                            <th class="text-center d-none d-sm-table-cell">10+X</th>
                                            <th class="text-center d-none d-sm-table-cell">X</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                {% endif %}
                                <tr>
                                    <td>
                                        <a href="{{ path('app_licensee_profile', {fftaCode: result.licensee.fftaMemberCode}) }}">
                                            {{ result.licensee.fullname }}
                                        </a>
                                        <br>
                                        <small class="text-muted">{{ result.activity|readable_enum }}</small>
                                    </td>
                                    <td class="text-center">{{ result.score1 ?? '—' }}</td>
                                    <td class="text-center">{{ result.score2 ?? '—' }}</td>
                                    <td class="text-center fw-semibold">{{ result.total ?? '—' }}</td>
                                    <td class="text-center d-none d-sm-table-cell">{{ result.nb10 ?? '—' }}</td>
                                    <td class="text-center d-none d-sm-table-cell">{{ result.nb10p ?? '—' }}</td>
                                </tr>
                                {% if loop.last or (results[loop.index] is defined and results[loop.index].ageCategory != result.ageCategory) %}
                                    </tbody>
                                {% endif %}
                            {% endfor %}
                        </table>
                    </div>
                </div>
            </div>
        {% endif %}

        {% if is_granted('ROLE_ADMIN') %}
            <div class="mt-3">
                <a href="{{ path('app_event_resultsedit', {slug: event.slug}) }}"
                   class="btn btn-outline-primary btn-sm"
                   data-action="modal#open"
                   data-title="Édition des résultats">
                    <i class="fa-solid fa-pencil me-1"></i>
                    Modifier les résultats
                </a>
            </div>
        {% endif %}
    </div>
{% endblock %}
