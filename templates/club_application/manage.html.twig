{% extends 'base.html.twig' %}

{% block title %}Gestion des demandes d'adhésion{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0">
                            <em class="fa-solid fa-users-gear me-2"></em>
                            Gestion des demandes d'adhésion - {{ club.name }} - Saison {{ currentSeason }}
                        </h5>
                    </div>
                    <div class="card-body">
                        {% if applications is empty %}
                            <div class="text-center text-muted py-4">
                                <em class="fa-solid fa-inbox fa-3x mb-3"></em>
                                <p class="mb-0">Aucune demande d'adhésion pour ce club cette saison.</p>
                            </div>
                        {% else %}
                            <ul class="nav nav-tabs mb-3" role="tablist">
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#pending" type="button">
                                        <em class="fa-solid fa-clock me-1"></em>
                                        En attente ({{ applications|filter(app => app.isPending)|length }})
                                    </button>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link" data-bs-toggle="tab" data-bs-target="#all" type="button">
                                        <em class="fa-solid fa-list me-1"></em>
                                        Toutes ({{ applications|length }})
                                    </button>
                                </li>
                            </ul>

                            <div class="tab-content">
                                <div class="tab-pane fade show active" id="pending">
                                    {% set pendingApps = applications|filter(app => app.isPending) %}
                                    {% if pendingApps is empty %}
                                        <div class="alert alert-info">
                                            <em class="fa-solid fa-circle-info me-2"></em>
                                            Aucune demande en attente de traitement.
                                        </div>
                                    {% else %}
                                        {{ include('club_application/_applications_table.html.twig', { applications: pendingApps, showActions: true }) }}
                                    {% endif %}
                                </div>
                                
                                <div class="tab-pane fade" id="all">
                                    {{ include('club_application/_applications_table.html.twig', { applications: applications, showActions: false }) }}
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
