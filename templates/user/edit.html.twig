{% extends 'base.html.twig' %}

{% block title %}Modifier - {{ user.fullname }}{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1>
                <em class="fa-solid fa-pen-to-square me-2"></em>
                Modifier l'utilisateur
            </h1>
            <h2 class="text-primary">{{ user.fullname }}</h2>
        </div>
        <div>
            <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-outline-secondary">
                <em class="fa-solid fa-arrow-left me-2"></em>
                Retour
            </a>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">
                        <em class="fa-solid fa-user-pen me-2"></em>
                        Informations de l'utilisateur
                    </h4>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.firstname) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.lastname) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.email) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.gender) }}
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_row(form.phoneNumber) }}
                    </div>

                    {% if form.roles is defined %}
                        <div class="mb-3">
                            {{ form_row(form.roles) }}
                        </div>
                    {% endif %}

                    <div class="d-flex justify-content-between mt-4">
                        <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-secondary">
                            <em class="fa-solid fa-times me-2"></em>
                            Annuler
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <em class="fa-solid fa-save me-2"></em>
                            Enregistrer
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
